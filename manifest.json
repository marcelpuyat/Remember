{
  "manifest_version": 2,

  "name": "Remember",
  "description": "Don't let your memory fail you. Just put a \"remember\" tag on your notes and be reminded of them regularly.",
  "version": "1.0",
  "background": {
    "scripts": [
      "vendor/jsOAuth-1.3.7.min.js",
      "apis/evernote-sdk.js",
      "vendor/jquery-1.11.3.min.js",
      "utils/helpers.js",
      "event_page/storageWrapper.js",
      "event_page/Provider.js",
      "event_page/Note.js",
      "event_page/config.js",
      "event_page/providers.js",
      "event_page/alarmHandler.js",
      "event_page/messenger.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/remember_icon128.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "identity",
    "storage",
    "alarms",
    "https://getpocket.com/",
    "https://www.evernote.com/"
  ]
}